{
   "AWSTemplateFormatVersion": "2010-09-09",
   "Description": "Provides networking configuration for NECCDC blue team deployment",
    "Metadata" : {
        "Stack" : {"Value" : "2"},
        "VersionDate" : { "Value" : "09302017" },
        "Identifier" : { "Value" : "stack2-network" },
        "Input" : { "Description" : "CIDR blocks, VPC names, KeyName, EC2 instance size" },
        "Output" : { "Description" : "Outputs ID of all deployed resources" }
    },
   "Parameters": {
      "pRegionDomain": {
         "Description": "Region name where resources will deploy",
         "Type": "String",
         "Default": "us-east-1.compute.internal"
      },
      "pRegionAZName": {
         "Description": "Availability Zone Name in Region",
         "Type": "String",
         "Default": "us-east-1a"
      },
      "pVPCName": {
         "Description": "Blue team VPC Name",
         "Type": "String",
         "Default": "BlueTeamVPC"
      },
      "pVpcCIDR": {
         "Description": "CIDR block for Blue Team VPC",
         "Type": "String",
         "Default": "10.0.0.0/16"
      },
      "pPublicCIDR": {
         "Description": "CIDR block for PublicSubnet",
         "Type": "String",
         "Default": "10.0.0.0/24"
      },
      "pPrivateCIDR": {
         "Description": "CIDR block for PrivateSubnet",
         "Type": "String",
         "Default": "10.0.1.0/24"
      },
      "pKeyName": {
         "Description": "Key Name for Instance",
         "Type": "String",
         "Default": ""
      },
      "pTeamName": {
	 "Description": "Team name  teamXX",
	 "Type": "String",
	 "Default": "test"
      },
      "pEventDomain": {
	 "Description": "Domain Name for the event",
	 "Type": "String",
	 "Default": "wildeagle.net"
      }

   },
   "Mappings": {
      "AWSRegionArch2AMI": {
         "us-east-1": {
            "PV64": "ami-50842d38",
            "HVM64": "ami-08842d60",
            "HVMG2": "ami-3a329952"
         },
         "us-west-2": {
            "PV64": "ami-af86c69f",
            "HVM64": "ami-8786c6b7",
            "HVMG2": "ami-47296a77"
         }
      }
   },
   "Resources": {
      "rBlueTeamVPC": {
         "Type": "AWS::EC2::VPC",
         "Properties": {
            "CidrBlock": {
               "Ref": "pVpcCIDR"
            },
            "InstanceTenancy": "default",
            "EnableDnsSupport": "true",
            "EnableDnsHostnames": "true",
            "Tags": [
               {
                  "Key": "Name",
                  "Value": {
                     "Ref": "pVPCName"
                  }
               }
            ]
         }
      },
      "rPublicSubnet": {
         "Type": "AWS::EC2::Subnet",
         "Properties": {
            "CidrBlock": {
               "Ref": "pPublicCIDR"
            },
            "AvailabilityZone": {
               "Ref": "pRegionAZName"
            },
            "VpcId": {
               "Ref": "rBlueTeamVPC"
            },
            "Tags": [
	       {
		  "Key": "Name",
		  "Value": "PublicSubnet"
	       }
            ]
         }
      },
      "rPrivateSubnet": {
         "Type": "AWS::EC2::Subnet",
         "Properties": {
            "CidrBlock": {
               "Ref": "pPrivateCIDR"
            },
            "AvailabilityZone": {
               "Ref": "pRegionAZName"
            },
            "VpcId": {
               "Ref": "rBlueTeamVPC"
            },
            "Tags": [
               {
                  "Key": "Name",
                  "Value": "PrivateSubnet"
               }
            ]
         }
      },
      "rBlueTeamIGW": {
         "Type": "AWS::EC2::InternetGateway",
         "Properties": {
            "Tags": [ { "Key": "Name", "Value": "BlueTeam Internet Gateway" } ]
         }
      },
      "rDHCPoptions": {
         "Type": "AWS::EC2::DHCPOptions",
         "Properties": {
            "DomainName": {
               "Ref": "pRegionDomain"
            },
            "DomainNameServers": [
               "AmazonProvidedDNS"
            ]
         }
      },
      "rNACLBlueTeam": {
         "Type": "AWS::EC2::NetworkAcl",
         "Properties": {
            "VpcId": {
               "Ref": "rBlueTeamVPC"
            }
         }
      },
      "rRouteTablePublic": {
         "Type": "AWS::EC2::RouteTable",
         "Properties": {
            "VpcId": { "Ref": "rBlueTeamVPC" },
            "Tags": [ { "Key": "Name", "Value": "Public RouteTable" } ]
         }
      },
      "rRouteTablePrivate": {
	 "Type": "AWS::EC2::RouteTable",
	 "Properties": {
	    "VpcId": { "Ref": "rBlueTeamVPC" },
	    "Tags": [ { "Key": "Name", "Value": "Private RouteTable" } ]
	 }
      },
      "rRouteToIGW": {
         "Type": "AWS::EC2::Route",
	 "DependsOn" : "rGatewayAttachment",
         "Properties": {
            "RouteTableId": { "Ref": "rRouteTablePublic" },
            "GatewayId": { "Ref": "rBlueTeamIGW" },
            "DestinationCidrBlock": "0.0.0.0/0"
         }
      },
      "rRouteAssocPublic": {
         "Type": "AWS::EC2::SubnetRouteTableAssociation",
         "Properties": {
            "RouteTableId": { "Ref": "rRouteTablePublic" },
            "SubnetId": { "Ref": "rPublicSubnet" }
         }
      },
      "rRouteAssocPrivate": {
         "Type": "AWS::EC2::SubnetRouteTableAssociation",
         "Properties": {
            "RouteTableId": { "Ref": "rRouteTablePrivate" },
            "SubnetId": { "Ref": "rPrivateSubnet" }
         }
      },
      "rNACLRuleAllowAllEgress": {
         "Type": "AWS::EC2::NetworkAclEntry",
         "Properties": {
            "CidrBlock": "0.0.0.0/0",
            "Egress": true,
            "Protocol": "-1",
            "RuleAction": "allow",
            "RuleNumber": "100",
            "NetworkAclId": {
               "Ref": "rNACLBlueTeam"
            }
         }
      },
      "rNACLRuleAllowAllIngress": {
         "Type": "AWS::EC2::NetworkAclEntry",
         "Properties": {
            "CidrBlock": "0.0.0.0/0",
            "Protocol": "-1",
            "RuleAction": "allow",
            "RuleNumber": "100",
            "NetworkAclId": {
               "Ref": "rNACLBlueTeam"
            }
         }
      },
      "rPrivateNACLassociation": {
         "Type": "AWS::EC2::SubnetNetworkAclAssociation",
         "Properties": {
            "NetworkAclId": { "Ref": "rNACLBlueTeam" },
            "SubnetId": { "Ref": "rPrivateSubnet" }
         }
      },
      "rPublicNACLassociation": {
         "Type": "AWS::EC2::SubnetNetworkAclAssociation",
         "Properties": {
            "NetworkAclId": { "Ref": "rNACLBlueTeam" },
            "SubnetId": { "Ref": "rPublicSubnet" }
         }
      },
      "rGatewayAttachment": {
         "Type": "AWS::EC2::VPCGatewayAttachment",
	 "DependsOn" : "rBlueTeamIGW",
         "Properties": {
            "VpcId": { "Ref": "rBlueTeamVPC" },
            "InternetGatewayId": { "Ref": "rBlueTeamIGW" }
         }
      },
      "rDHCPOptionsAssoc": {
         "Type": "AWS::EC2::VPCDHCPOptionsAssociation",
         "Properties": {
            "VpcId": { "Ref": "rBlueTeamVPC" },
            "DhcpOptionsId": { "Ref": "rDHCPoptions" }
         }
      }
   },
   "Outputs": {
      "rBlueTeamVPC": {
         "Value": { "Ref": "rBlueTeamVPC" }
      },
      "rBlueTeamIGW": {
	 "Value": { "Ref": "rBlueTeamIGW" }
      },
      "rDHCPoptions": {
	"Value" : { "Ref": "rDHCPoptions" }
      },
      "rNACLBlueTeam": {
	"Value" : { "Ref": "rNACLBlueTeam" }
      },
      "rRouteTablePublic": {
	"Value" : { "Ref": "rRouteTablePublic" }
      },
      "rRouteTablePrivate": {
	"Value" : { "Ref": "rRouteTablePrivate" }
      },
      "rPublicSubnet": {
         "Value": { "Ref": "rPublicSubnet" }
      },
      "rPrivateSubnet": {
         "Value": { "Ref": "rPrivateSubnet" }
      }
   }
}
